<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FundooNotesApp.View.ArchivePage">
    
        <ContentPage.ToolbarItems>
            <ToolbarItem Order="Primary" Priority="0" Text="Archive                                       " ></ToolbarItem>
            <ToolbarItem Order="Primary"  Icon="grids.png" ></ToolbarItem>
        </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <ScrollView>
            <RelativeLayout>
                <StackLayout >
                    <ScrollView Orientation="Vertical" VerticalOptions="StartAndExpand" HeightRequest="450">
                        <StackLayout>
                            <StackLayout x:Name="NoteDisplay">
                                <Label Text="Archive"/>
                                <Grid x:Name="ArchiveGrid" Margin="5" VerticalOptions="Center"></Grid>
                            </StackLayout>
                        </StackLayout>
                    </ScrollView>
                </StackLayout>
            </RelativeLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>